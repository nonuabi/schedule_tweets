<div class="text-center">
  <h1>Sign-In Panel</h1>
</div>

<%= form_with url: sign_in_path do |form|%>
  <div class="mb-3">
    <%= form.label :email, class: "form-label"%>
    <%= form.email_field :email, placeholder: "abhishek@gorails.in", required: true, class:"form-control"%>
  </div>
  
  <div class="mb-3">
    <%= form.label :password, class: "form-label"%>
    <%= form.password_field :password, placeholder: "password", required: true, class:"form-control"%>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign In" , class: "btn btn-success"%>
  </div>
<% end %>